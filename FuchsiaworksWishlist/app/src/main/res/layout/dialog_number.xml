<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:screenOrientation="portrait">

    <NumberPicker
        android:id="@+id/dn_numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <Button
        android:id="@+id/dn_btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dn_numberPicker"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="98dp"
        android:layout_toRightOf="@+id/dn_numberPicker"
        android:text="Cancel" />

    <Button
        android:id="@+id/dn_btnSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dn_btnCancel"
        android:layout_alignBottom="@+id/dn_btnCancel"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/dn_numberPicker"
        android:text="Set" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fuchsiaworks.fuchsiaworkswishlist.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ma_btnAddItem"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:elevation="5dp"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/ma_listWishlist"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ma_listWishlist"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ma_fabClearItems"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:elevation="5dp"
        app:fabSize="mini"
        app:layout_constraintTop_toBottomOf="@+id/ma_listWishlist"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ma_listWishlist"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ma_fabFlash"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:elevation="5dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/ma_btnAddItem"
        app:layout_constraintTop_toBottomOf="@+id/ma_listWishlist"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_view"
        android:layout_marginRight="100dp"
        app:layout_constraintRight_toRightOf="@+id/ma_listWishlist"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ma_fabCaptureType"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:elevation="5dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/ma_fabClearItems"
        app:layout_constraintTop_toBottomOf="@+id/ma_listWishlist"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="@+id/ma_listWishlist"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ma_listWishlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:scrollbars="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/button_with_icon"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
